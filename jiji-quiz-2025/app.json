{
  "expo": {
    "scheme": "jiji-quiz",
    "plugins": [
      "expo-router"
    ],
    "name": "2025時事クイズ",
    "slug": "jiji-quiz-2025",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "platforms": ["ios", "android", "web"],
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "ios": {
      "bundleIdentifier": "com.jiji.quiz2025",
      "buildNumber": "1",
      "supportsTablet": true
    },
    "android": {
      "package": "com.jiji.quiz2025",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "extra": {
      "eas": {
        "projectId": "YOUR_PROJECT_ID_HERE"
      }
    }
  }
}
